<% layout('layouts/layout.ejs') %>

    <h1 class="ms-3"> Projects with tag "<%= tag %>" </h1>

    <div class="project-cards">
        <% for (project of projects) { %>
            <div>
                <a href="/show/<%= project._id %>">
                    <img src="<%= project.image %>" alt="images">
                </a>

                <div id="card">
                    <h5>
                        <%= project.name %>
                    </h5>

                    <a href="#" class="trash-button" data-project-id="<%= project._id %>">
                        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"
                            class="bi bi-trash-fill" viewBox="0 0 16 16">
                            <path
                                d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                        </svg>
                    </a>
                </div>
            </div>
            <% } %>
    </div>

    <div class="modal">
        <div class="modal-content">
            <h4>Are you sure you want to delete this Project?</h4>
            <p class="lead">
                This action is irreversible
            </p>
            <div class="button-container">
                <button type="button" id="confirmDelete" class="btn btn-danger">Delete</button>
                <button type="button" id="cancelDelete" class="btn btn-light">Cancel</button>
            </div>
        </div>
    </div>